---
const testimonials = [
  {
    name: "Sarah Johnson",
    role: "5th Grade Teacher",
    school: "Riverside Elementary",
    content: "Zerra has completely transformed how I organize my classroom. I can finally keep track of all my notes and student progress in one place!",
    rating: 5
  },
  {
    name: "Michael Chen",
    role: "High School Math Teacher",
    school: "Lincoln High School",
    content: "The task management features are incredible. I can plan my lessons weeks in advance and never lose track of what needs to be done.",
    rating: 5
  },
  {
    name: "Emily Rodriguez",
    role: "Kindergarten Teacher",
    school: "Sunnyvale Primary",
    content: "As a new teacher, Zerra helped me stay organized from day one. The parent communication features are especially helpful.",
    rating: 5
  }
];
---

<section id="testimonials" class="py-20 sm:py-32 bg-neutral-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center space-y-4 mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-neutral-900">
        Loved by Teachers Everywhere
      </h2>
      <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
        Join thousands of educators who have transformed their teaching workflow with Zerra.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white p-6 rounded-lg shadow-sm border border-neutral-200">
          <div class="space-y-4">
            <div class="flex text-yellow-400">
              {[...Array(testimonial.rating)].map(() => (
                <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-neutral-600 leading-relaxed italic">"{testimonial.content}"</p>
            <div>
              <p class="font-semibold text-neutral-900">{testimonial.name}</p>
              <p class="text-sm text-neutral-500">{testimonial.role}</p>
              <p class="text-sm text-neutral-500">{testimonial.school}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
