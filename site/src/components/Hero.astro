---
import { Button } from "@/components/ui/button";
import { Card } from "@/components/ui/card";
---

<section class="relative overflow-hidden bg-gradient-to-b from-neutral-50 to-white py-20 sm:py-32">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <div class="space-y-4">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-neutral-900 leading-tight">
            Organize Your
            <span class="text-green-600">Teaching Life</span>
            with Zerra
          </h1>
          <p class="text-lg sm:text-xl text-neutral-600 leading-relaxed">
            The all-in-one productivity tool designed specifically for teachers. 
            Track notes, manage tasks, and organize your classroom with ease.
          </p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <Button size="lg" className="bg-green-600 hover:bg-green-700 text-lg px-8">
            Start Your Free Trial
          </Button>
          <Button size="lg" variant="outline" className="text-lg px-8">
            Watch Demo
          </Button>
        </div>
        
        <div class="flex items-center space-x-6 text-sm text-neutral-500">
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
            <span>Free 30-day trial</span>
          </div>
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
            <span>No credit card required</span>
          </div>
        </div>
      </div>
      
      <div class="relative">
        <Card className="p-6 shadow-xl border-green-100">
          <div class="space-y-4">
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              <div class="h-2 bg-neutral-200 rounded w-32"></div>
            </div>
            <div class="space-y-2">
              <div class="h-3 bg-green-100 rounded w-full"></div>
              <div class="h-3 bg-green-50 rounded w-4/5"></div>
              <div class="h-3 bg-green-50 rounded w-3/4"></div>
            </div>
            <div class="flex space-x-2">
              <div class="h-8 bg-green-600 rounded w-20"></div>
              <div class="h-8 bg-neutral-200 rounded w-16"></div>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </div>
</section>
